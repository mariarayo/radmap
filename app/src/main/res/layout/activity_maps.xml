<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <fragment
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/floatingMenuAgenda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="?android:attr/actionBarSize"
        app:menu_backgroundColor="@android:color/transparent"
        app:menu_colorNormal="#d48307"
        app:menu_colorPressed="#d48307"
        app:menu_colorRipple="#d48307"
        app:menu_fab_label="Menu"
        app:menu_labels_position="left"
        app:menu_labels_colorNormal="#ffffff"
        app:menu_labels_colorPressed="#d48307"
        app:menu_labels_colorRipple="#d48307"
        app:menu_labels_textColor="#d48307"
        app:menu_openDirection="up"
        app:menu_shadowColor="#d48307"
        app:menu_showShadow="true">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/quien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/info"
            app:fab_colorNormal="#d48307"
            app:fab_colorPressed="#d48307"
            app:fab_label="Acerca de:"
            app:fab_shadowColor="#d48307"
            app:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/instrucciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/uso"
            app:fab_colorNormal="#d48307"
            app:fab_colorPressed="#d48307"
            app:fab_label="Instrucciones"
            app:fab_shadowColor="#d48307"
            app:fab_size="mini" />


    </com.github.clans.fab.FloatingActionMenu>


</RelativeLayout>
